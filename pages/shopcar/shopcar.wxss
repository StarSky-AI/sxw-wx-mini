.box{
  background: #e8e8e8;
}
.goodsSection{
  margin-bottom:100rpx;
  background: #e8e8e8;
}
.goods{
  width: 100%;
  height: 321rpx;
  border-top:1rpx solid #ccc;
  margin-top:20rpx;
  background: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.goods .content{
  width:1050rpx;
  height: 100%;
  display: flex;
} 
.goods .content .leftSeion{
  width: 750rpx;
  height: 100%;
  padding-left:30rpx; 
  box-sizing: border-box;
}
.goods .content .leftSeion .top{
  height: 99rpx;
  border-bottom: 1rpx solid #eaeaea;
  display: flex;
  justify-content:space-between; 
  align-items: center;
}
.goods .content .check{
  width: 40rpx;
  height: 40rpx;
}
.goods .content .check image{
  display: block;
}
.checkIcon{
  width: 100%;
  height: 100%;
}
.seleNum{
  width: 166rpx;
  height: 48rpx;
  display: flex;
  padding-right:30rpx; 
}
.seleNum .reduce,.seleNum .add{
  width: 48rpx;
  height: 48rpx;
  background: #f5f5f5;
}
.seleNum .reduce image,.seleNum .add image{
  width: 100%;
  height: 100%;
}
.seleNum .num{
  width: 70rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #000;
}
.goods .content .bottom{
  display: flex;
  align-items: center;
  height: 220rpx;
}
.goods .content .bottom .img{
    width: 140rpx;
    height: 140rpx;
    margin-right: 40rpx;
}
.goods .content .bottom .img image{
  width: 100%;
  height: 100%;
}
.goods .content .bottom .description{
    width: 500rpx;
    height: 160rpx;
}
.goods .content .title{
  color: #000;
  font-size: 28rpx;
  font-weight: bolder;
}
.goods .content .standard{
  width: 80rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background: #f6f6f6;
  color: rgb(146,146,146);
  margin-top: 10rpx;
  font-size:20rpx; 
}
.goods .content .bottom .price{
  display: flex;
  justify-content: space-between;
   color: rgb(10,10,10);
  font-size: 26rpx;
  font-weight: bolder; 
  margin-top:36rpx;
}
.goods .content .bottom .price .goodsNumber{
  color: rgb(129,129,129);
  font-size: 22rpx;
  line-height: 36rpx;
  font-weight: normal;
}
.rightSeion{
  width: 300rpx;
  height: 100%;
  background: #ccc;
  display: flex;
}
.rightSeion .Collection{
  width: 150rpx;
  background-color:#aaaaaa;
  text-align: center;
  line-height: 320rpx;
  color: #fff;
}
.rightSeion .delete{
  width: 150rpx;
  background-color:#fe0000;
  text-align: center;
  line-height: 320rpx; 
  color: #fff;
  font-size: 30rpx;
  font-weight: bolder;
}
.footer{
  position: fixed;
  z-index: 100;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height:99rpx;
  border-top:1rpx solid #ebebeb;
  background: #fff;
  padding-left: 35rpx;
  box-sizing: border-box;
}
.footer .allCheck{
  width: 40rpx;
  height: 40rpx;
}
.footer .right{
  display: flex;
  width: 420rpx;
  height: 100%;
  align-items: center;
  justify-content: space-between;
}
.footer .right .total{
  font-size: 26rpx;
  font-weight: bolder;
  color: rgb(74,74,74);
}
.footer .right .total .totalPrice{
  color: #ff7072;
}
.footer .right view{
  width: 180rpx;
  height: 99rpx;
  background: #ffd545;
  color: rgb(40,40,40);
  font-size: 28rpx;
  font-weight: bolder;
  text-align: center;
  line-height: 99rpx;
}
.zf_popup {
  width:750rpx;
  height:600rpx;
  background-color:#fff;
   padding:20rpx; 
   z-index: 9999;
}
page {
  background: rgba(0,0,0,0.5);
  z-index:9999;
}
.mode {
  position:relative;
  left:0;
  top:0;
  padding:10rpx 0;
}
.zf_delete {
  width:40rpx;
  height:40rpx;
  position:absolute;
  right:50rpx;
  top:0;
}
.zf_parent {
   padding:60rpx 0; 
}

.zf_item {
  position:relative;
  left:0;
  top:0;
}

.zf_logo {
  position:absolute;
  top:0;
  left:10rpx;
  width:80rpx;
  height:80rpx;
}
.zf_text {
  position:absolute;
  left:120rpx;
  top:0;
}

.zf_selected {
  position:absolute;
  right:55rpx;
  top:0;
  width:40rpx;
  height:40rpx;
}
.zf_selected image{
  width:100%;
  height:100%;
}
.zf_btn {
  background-color: rgb(32,32,32);
  height:100rpx;
  width:120%;
  color:#fff;
  line-height:100rpx;
  text-align:center;
  margin:0 -60rpx;
  margin-bottom:120rpx;
  margin-top:60rpx;
}
/* ----------弹出层样式---------------------------  */
 .modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:45%;
  left:0;
  background:#fff;
  overflow: hidden;
  z-index:99999;
  } 
.modal-list {
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
}

