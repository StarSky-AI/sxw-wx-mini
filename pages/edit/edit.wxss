/* pages/edit/edit.wxss */
.box{
	background: #f5f5f5;
}
.box .option{
	border-bottom:1rpx solid #eaeaea;
	height:98rpx;
	display:flex;
	background:#fff;
	padding-left:34rpx;
}
.box .option .name{
	width:134rpx;
	height:98rpx;
	line-height:98rpx;
	font-size:26rpx;
	color:#000;
	font-weight:bolder;
}
.box .option input{
	width:584rpx;
	height:100%;
	font-size:28rpx;
	color:#000;
	font-weight:bolder;
}
.selected{
    width:584rpx;
    height:100%;
    font-size:28rpx;
    line-height:98rpx;
    color:#000;
    font-weight:bolder;
}
.set{
	display:flex;
	font-size:24rpx;
	color:#808080;
	padding-left:34rpx;
	margin-top:36rpx;
}
.sel{
	width:32rpx;
	height:32rpx;
	line-height:32rpx;
	margin-right: 20rpx;
}
.sel image{
	width: 100%;
	height: 100%;
}
.input-placeholder {
    color: rgb(204,204,204);
}
.visibility {
   visibility:hidden;
}
.area-item {
    line-height: 40px;
    text-align: center;
}
.distpicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 560rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
}
.distpicker-btn {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fafafa;
    color: #586C94;
}

.distpicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 560rpx;
    background-color: #fff;
}