.box{
	background: #fafafa;
	padding-top:20rpx; 
	padding-bottom: 120rpx;
}
.addAddress{
	background: #fff;
	height: 145rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 30rpx;
	color: rgb(128,128,128);
}
.addAddress .add{
	width: 40rpx;
	height: 40rpx;
}
.addAddress .add image{
	width: 100%;
	height: 100%;
}
.goodsList{
	margin-top: 20rpx;
}
.goodsList .option{
	padding-left: 40rpx;
	background: #fff;
	margin-top:20rpx;
}
.goodsList .option .header{
	height: 90rpx;
	border-bottom: 1rpx solid #eaeaea;
	display: flex;
	align-items: center;
}
.bottom{
	width: 100%;
	height: 99rpx;
	border-top: 1rpx solid #eaeaea;
	position: fixed;
	bottom: 0;
	left: 0;
	background: #fff;
}
.submit{
	width: 180rpx;
	height: 100%;
	text-align: center;
	line-height: 99rpx;
	background: #ffd444;
	font-size: 28rpx;
	color: rgb(40,40,40);
	font-weight: bolder;
	float: right;
}
.totalPrice{
	float: right;
	line-height: 99rpx;
	font-size: 26rpx;
	color: rgb(74,74,74);
	margin-right: 50rpx;
	font-weight: bolder;
}
.totalPrice text{
	color: rgb(255,112,112);
}
.goods{
	height: 222rpx;
	border-bottom: 1rpx solid #eaeaea;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-right: 30rpx;
	box-sizing: border-box;
}
.goodsPic{
	width: 140rpx;
	height: 140rpx;
}
.goodsPic image{
	width: 100%;
	height: 100%;
}
.goodsNumber{
	display: flex;
	justify-content: flex-start;
}
.goodsNumber>view{
	width: 48rpx;
	height: 48rpx;
	background: #f5f5f5;
}
.goodsNumber>view image{
	width: 100%;
	height: 100%;
}
.goodsNumber input{
	width: 70rpx;
	height: 48rpx;
	text-align: center;
	line-height: 48rpx;
	color: #000;
	font-size: 24rpx;
}
.goodsName{
	font-size: 30rpx;
	line-height: 30rpx;
	color: #000;
	font-weight: bolder;
	margin-bottom:20rpx;
}
.goodsSpec{
	width: 80rpx;
	height: 40rpx;
	background: #f7f7f7;
	text-align: center;
	color: #929292;
	font-size: 20rpx;
	line-height: 40rpx;
	margin-bottom:40rpx;
}
.goodsprice{
	font-size: 26rpx;
	line-height: 26rpx;
	color: rgb(10,10,10);
	font-weight: bolder;
}
.freight{
	height: 99rpx;
	background: #fff;
	border-bottom: 1rpx solid #eaeaea;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-right: 32rpx;
	font-size: 26rpx;
	color: rgb(10,10,10);
	font-weight: bolder;
}
.Subtotal{
	height: 99rpx;
	background: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-right: 32rpx;
	font-size: 26rpx;
	color: rgb(147,147,147);
}
.Subtotal view text{
	color: rgb(255,112,112);
	font-weight: bolder;
}
  /* /* 选择支付方式   */
page {
  background-color: #fbf9fe;
  height: 100%;
  color:#000;
}
.page__hd{
    padding: 50rpx 50rpx 100rpx 50rpx;
    text-align: center;
}
.page__title{
    display: inline-block;
    padding: 20rpx 40rpx;
    font-size: 32rpx;
    color: #AAAAAA;
    border-bottom: 1px solid #CCCCCC;
}
.page__desc{
    display: none;
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #BBBBBB;
}
.section{
    margin-bottom: 80rpx;
}
.section__title{
    margin-bottom: 16rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.picker{
  padding: 26rpx;
  background-color: #FFFFFF;
} 