.box{
	background:#f5f5f5;
	padding-bottom:120rpx;
}
.orderInfo{
	height:138rpx;
	background:#fff;
	padding:0 30rpx;
	box-sizing: border-box;
	display:flex;
	flex-direction: column;
	justify-content: center;
	border-top:1rpx solid #eaeaea;
	border-bottom:1rpx solid #eaeaea;
}
.orderNumber{
	font-size:26rpx;
	line-height:26rpx;
	color:#000;
	font-weight:bolder;
	margin-bottom:38rpx;
}
.orderTime{
	display:flex;
	justify-content: space-between;
	font-size:24rpx;
	line-height:24rpx;
	color:#808080;
}
.orderTime .Status{
	color:#fe3824;
	font-weight:bolder;
}
.person{
	height:76rpx;
	padding-left:30rpx;
	line-height:76rpx;
	box-sizing: border-box;
	font-size:26rpx;
	color:#808080;
}
.personInfo{
	height:126rpx;
	background: #fff;
	padding:0 30rpx;
	box-sizing: border-box;
	border-top:1rpx solid #eaeaea;
	border-bottom:1rpx solid #eaeaea;
	display:flex;
	flex-direction: column;
	justify-content: center;
}
.personInfo .personName{
	margin-bottom:22rpx;
	font-size:26rpx;
	line-height:26rpx;
	color:#000;
	font-weight:bolder;
}
.personInfo .personAddress{
	font-size:24rpx;
	line-height:24rpx;
	color:#808080;
}
.goods{
	border-top:1rpx solid #eaeaea;
	border-bottom:1rpx solid #eaeaea;
	background: #fff;
	padding-left:30rpx;
	box-sizing: border-box;
}
.goods .option{
	height:160rpx;
	display:flex;
	justify-content: space-between;
	align-items: center;
	padding-right:30rpx;
}
.borBottom{
	border-bottom:1rpx solid #eaeaea;
}
.goods .option .left{
	display:flex;
}
.goods .option .pic{
	width:76rpx;
	height:76rpx;
	margin-right: 24rpx;
}
.goods .option .pic image{
	width:100%;
	height:100%;
}
.goods .option .name{
	font-size:28rpx;
	line-height:28rpx;
	margin-bottom:20rpx;
	color:#000;
	font-weight:bolder;
}
.goods .option .spec{
	width:56rpx;
	height:28rpx;
	background: #f5f5f5;
	border-radius:4rpx;
	font-size:16rpx;
	color:#8d8d8d;
	text-align:center;
	line-height:28rpx;
}
.goods .option .price{
	font-size:26rpx;
	line-height:32rpx;
	color:#000;
	font-weight:bolder;
}
.goods .option .number{
	font-size:26rpx;
	line-height:26rpx;
	margin-top:20rpx;
	color:#808080;
	text-align:right;
}
.total{
	height:200rpx;
	padding-left:30rpx;
	background: #fff;
	border-top:1rpx solid #eaeaea;
	border-bottom:1rpx solid #eaeaea;
	margin-top:24rpx;
	font-size:28rpx;
	color:#000;
	font-weight:bolder;
}
.total>view{
	height:100rpx;
	display:flex;
	justify-content: space-between;
	align-items: center;
	padding-right:30rpx;
	box-sizing: border-box;
}
.totalPrice{
	border-bottom:1rpx solid #eaeaea;
}
.bottom{
	position:fixed;
	left:0;
	bottom:0;
	width:100%;
	height:99rpx;
	background: #fff;
	display:flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 30rpx;
	box-sizing: border-box;
	border-top:1rpx solid #eaeaea;
}
.bottom .left{
	font-size:26rpx;
	font-weight:bolder;
	color:#000;
}
.bottom .left text{
	color:#ff7070;
}
.bottom .right{
	display:flex;
}
.bottom .right>view{
	width:160rpx;
	height:64rpx;
	text-align:center;
	line-height:64rpx;
	font-size:26rpx;
	color:#000;
	font-weight:bolder;
	border:1rpx solid #eaeaea;
}
.bottom .right .cancel{
	background:#eaeaea;
	margin-right:16rpx;
}
.bottom .right .pay{
	background:#ffd444;
}