/**index.wxss**/

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #000;
  text-align: center;
  line-height: 80rpx;
  font-size: 22rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 80rpx;
  color: #999;
  margin: 0 50rpx;
}

.on {
  color: #000;
  border-bottom: 5rpx solid #000;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/* pages/business/business.wxss */

.box {
  background: #fafafa;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.goodsClass {
  background: #fff;
}

.goodsClass .content {
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.goodsClass .content .option {
  width: 100rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #808080;
}

.goodsClass .content .active {
  color: #000;
  border-bottom: 4rpx solid #000;
}

.swiper-banner {
  width: 100%;
  height: 498rpx;
  margin-bottom: 20rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.wx-swiper-dots {
  background: rgba(255, 255, 255, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.same {
  padding: 60rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  margin: 20rpx 0;
}

.same .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.same .title .hot {
  font-size: 30rpx;
  color: #000;
  font-weight: bolder;
}

.same .title .eng {
  font-size: 18rpx;
  color: #4d4d4d;
  margin-left: 16rpx;
}

.same .title .titleRight {
  font-size: 26rpx;
  color: #000;
  position: relative;
}

.same .text {
  padding-right: 30rpx;
}

.hot {
  padding-left: 26rpx;
}

.arrow {
  width: 16rpx;
  height: 22rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.arrow image {
  width: 100%;
  height: 100%;
}

.titleLeft {
  position: relative;
}

.arrowl {
  width: 12rpx;
  height: 28rpx;
  position: absolute;
  left: 0;
  top: 4rpx;
}

.arrowl image {
  width: 100%;
  height: 100%;
}

.hotelList {
  height: 260rpx;
  margin-top: 30rpx;
}

.hotelList .hotelImg {
  height: 260rpx;
  width: 260rpx;
  float: left;
  margin-right: 20rpx;
}

.hotelImg image {
  width: 100%;
  height: 100%;
}

.hotelText {
  float: left;
  height: 260rpx;
  width: 406rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 24rpx;
}

.hotelTitle {
  height: 60rpx;
  line-height: 60rpx;
}

.hotelText .hotelH1 {
  font-size: 30rpx;
}

.hotelH2 {
  font-size: 24rpx;
  line-height: 30rpx;
  color: rgb(128, 128, 128);
}

.hotelText {
  position: relative;
}

.hotelPrice .hotelM {
  position: absolute;
  left: 0;
  bottom: 0;
}

.hotelMM {
  color: rgb(255, 112, 112);
}

.hotelPrice .hotelDistance {
  position: absolute;
  right: 0;
  bottom: 0;
}

.ani {
  transform: scale(1.1);
}

.noAni {
  transform: scale(0.88);
}

/*  圆角商品  */

.sj_detail {
  background-color: #fff;
}

.sj_item {
  padding:0 7px 20rpx 7rpx;  
  box-sizing: border-box;
  float: left;
}

.sj_img {
  width: 335rpx;
  height: 335rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.sj_img image {
  width: 100%;
  height: 100%;
}

.sj_text1 {
  font-size: 26rpx;
}

.sj_price {
  color: rgb(255, 112, 112);
  font-size: 26rpx;
}

.sj_text2 {
  font-size: 20rpx;
  color: rgb(153, 153, 153);
}

.sj_map {
  color: rgb(153, 153, 153);
  font-size: 20rpx;
}
